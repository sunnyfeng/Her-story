<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


<fragment
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sunnyfeng.nycforall.WomenMapsActivity"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/plus_button"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_above="@+id/minus_button"
        android:layout_alignParentEnd="true"
        android:text="+"
        android:textSize="24sp" />

    <Button
        android:id="@+id/minus_button"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="-"
        android:textSize="24sp" />

    <Button
        android:id="@+id/reset_button"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:text="Ã¸"
        android:textSize="24sp"
        android:layout_above="@+id/plus_button"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/womenLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@color/colorButton1"
        android:fadingEdge="horizontal|vertical"
        android:fontFamily="casual"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:shadowColor="@color/common_google_signin_btn_text_light_focused"
        android:text="@string/womensRights"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>